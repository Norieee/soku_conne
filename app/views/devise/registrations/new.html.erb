<header class='top-header'>
  <div class='top-header-left'>
    <%= image_tag 'sokuconne_logo.png', class:'sokuconne-icon', alt:'top_icon' %>
  </div>
</header>
<div class='top_before_login_image'>
  <%= image_tag 'top_before_login.png'%>
</div>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= devise_error_messages! %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name %>
          </div>
          <div class='field-input'>
            <%= f.text_field :last_name, placeholder: 'ひらがな・カタカタ・漢字で入力', autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name %>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name, placeholder: 'ひらがな・カタカタ・漢字で入力', autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :company %>
          </div>
          <div class='field-input'>
            <%= f.text_field :company, placeholder: '所属する会社名等', autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email ,placeholder: 'すでに登録済みのアドレスは使用不可' %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>